{% extends 'base.html.twig' %}

{% block banner '' %}
{% block page_title article.title %}
{% block meta_description article.description %}

{% block canonical_url url('app_formation_article', { 'slug': article.slug }) %}

{% block final_javascripts include('bot/_javascript.html.twig') %}

{% block base_stylesheets %}
    {{ parent() }}
    
    <link href="{{ asset('css/emoji.min.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <main class="content">
        <section class="programme">
            <nav class="text--body">
                <a class="l__wrapper space--20-0 icon--with-text"
                   href="{{ path('app_formation_axe', { 'slug': article.axe.slug }) }}">
                    {{ include('components/caret--left.html.twig') }}
                    Retour Ã  l'axe de formation
                </a>
            </nav>
            <header class="space--60-0 l__wrapper--slim">
                <h1 class="text--large b__nudge--bottom-small">
                    {{ article.title }}
                </h1>
            </header>

            {% if article.media and article.displayMedia %}
                <figure class="fullscreen">
                    <img src="{{ media_asset(article.media, {'q': 70}) }}"
                         title="{{ article.title }}"
                         alt="{{ article.media.name }}" />
                </figure>
            {% endif %}

            <article class="l__wrapper--slim">
                {{ article.content|markdown }}
            </article>
        </section>
    </main>
{% endblock %}
