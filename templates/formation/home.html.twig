{% extends 'base.html.twig' %}

{% block banner '' %}
{% block page_title page.title %}
{% block meta_description page.description %}
{% block meta_twitter_description page.twitterDescription ?: page.description %}
{% block canonical_url url('app_formation_home') %}

{% block stylesheets %}
    <style type="text/css">
        body {
            background-color: #E5E5E5;
        }
        header {
            background-color: #fff;
        }
    </style>
{% endblock %}

{% block base_stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/emoji.min.css') }}" rel="stylesheet">
{% endblock %}

{% block final_javascripts include('bot/_javascript.html.twig') %}

{% block content %}
<main class="content">
    <section class="espace-formation">

        <header class="space--40-0">
            <div class="l__wrapper--slim text--center">
                <h1 class="text--large text--inline text--on-white">
                    {{ page.title }}
                </h1>
            </div>
        </header>

        <div class="l__wrapper--slim">
            <div class="espace-formation__intro text--body">
                {{ page.content|raw }}
            </div>
        </div>

        <div class="l__wrapper">
            <ul class="espace-formation__cases">
                {% for axe in axes %}
                <li>
                    <h1 class="text--large">
                        <a href="{{ path('app_formation_axe', { 'slug': axe.slug }) }}"
                           class="link--no-decor">
                            {{ axe.title }}
                        </a>
                    </h1>
                    <div>
                        <a href="{{ path('app_formation_axe', { 'slug': axe.slug }) }}"
                           class="btn btn--green--apple">Lire</a>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </section>

</main>
{% endblock %}
